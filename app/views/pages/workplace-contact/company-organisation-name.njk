{% extends "layouts/journey.njk" %}

{% block casaPageTitle %}
    {{ t('company-organisation-name:pageTitle') }}
{% endblock %}

{% block journey_form %}

    <h1 class="govuk-heading-l">{{ t('company-organisation-name:h1') }}</h1>

    {{ casaGovukInput({
        id: 'f-companyOrganisationName',
        name: 'companyOrganisationName',
        value: formData.companyOrganisationName,
        casaErrors: formErrors,
        classes: "govuk-input--width-40",
        attributes: {
            "aria-label": t('company-organisation-name:h1'),
            "aria-required": true
        },
        autocomplete: 'organization'
    }) }}

{% endblock %}
