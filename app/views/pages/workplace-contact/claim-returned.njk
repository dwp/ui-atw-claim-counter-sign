{% extends "layouts/journey.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block casaPageTitle %}
    {{ t('claim-returned:pageTitle') }}
{% endblock %}

{% block content_block %}

  {{ govukPanel({
        titleText: t('claim-returned:h1', employeeName),
        html: t('claim-returned:reference', employeeName | possessive(locale)) + '<br />' + claimReference
    }) }}

    <h2 class="govuk-heading-m">{{ t('claim-returned:whatNext.h2') }}</h2>

    <p class="govuk-body">{{ t('claim-returned:whatNext.p1', employeeName | possessive(locale)) }}</p>
    <p class="govuk-body">{{ t('claim-returned:whatNext.p2', employeeName) }}</p>

    <p class="govuk-body">
        <a href="{{ casa.mountUrl }}">{{ t('common:signOut') }}</a>
    </p>
    <p class="govuk-body">
        <a href={{ feedbackFormDirectUrl }}>{{ t('claim-returned:feedback.link') }}</a>
    </p>

{% endblock %}
